<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/image_background"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="200dp"
        />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saturation"/>
        <SeekBar
            android:id="@+id/seek_saturation"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:min="0"
            android:max="510"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scale"/>
        <SeekBar
            android:id="@+id/seek_scale"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:min="0"
            android:max="510"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S.Red"/>
        <SeekBar
            android:id="@+id/seek_scale_red"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:min="0"
            android:max="510"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S.Green"/>
        <SeekBar
            android:id="@+id/seek_scale_green"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:min="0"
            android:max="510"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S.Blue"/>
        <SeekBar
            android:id="@+id/seek_scale_blue"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:min="0"
            android:max="510"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R.Red"/>
        <SeekBar
            android:id="@+id/seek_rotate_red"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:min="0"
            android:max="360"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R.Green"/>
        <SeekBar
            android:id="@+id/seek_rotate_green"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:min="0"
            android:max="360"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R.Blue"/>
        <SeekBar
            android:id="@+id/seek_rotate_blue"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:min="0"
            android:max="360"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Binary"/>
        <SeekBar
            android:id="@+id/seek_binary"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:min="0"
            android:max="255"/>

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Black White"/>
        <SeekBar
            android:id="@+id/seek_black_white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:min="0"
            android:max="255"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Mul Red"/>

            <SeekBar
                android:id="@+id/seek_red_mul"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="255"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Mul Green"/>

            <SeekBar
                android:id="@+id/seek_green_mul"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="255"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Mul Blue"/>

            <SeekBar
                android:id="@+id/seek_blue_mul"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="255"/>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Add Red"/>

            <SeekBar
                android:id="@+id/seek_red_add"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="255"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Add Green"/>

            <SeekBar
                android:id="@+id/seek_green_add"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="255"/>

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Add Blue"/>
            <SeekBar
                android:id="@+id/seek_blue_add"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:min="0"
                android:max="255"/>
        </LinearLayout>
    </LinearLayout>

    <GridLayout
        android:id="@+id/radio_style"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/originalImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Original"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gray"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/greyOnRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GrayonRed"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/greyOnGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GrayonGreen"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/greyOnBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GrayonBlue"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Green"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/inverted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inverse"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/binary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Binary"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/colorSwap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ColorSwap"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/colorSwap2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ColorSwap2"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/sepia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sepia"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/grayScale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GrayScale"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/alphaBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AlphaBlue"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/alphaPink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AlphaPink"/>

    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Matrix_BTN_TakePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take picture"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/blur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="blur"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/sharpe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sharpe"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/glass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="glass"/>
    </LinearLayout>

</LinearLayout>
